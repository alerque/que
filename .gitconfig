[core]
	excludesFile = ~/.gitignore
	quotePath = off
[user]
	email = caleb@alerque.com
	name = Caleb Maclennan
	signingKey = 75267693!
[github]
	user = alerque
[pld]
	user = caleb@pld-linux.org
[push]
	default = simple
	gpgSign = if-asked
	recurseSubmodules = check
	followTags = true
[color]
	ui = true
[merge]
	ff = false
[branch]
	autoSetupRebase = always
	rebase = preserve
[pull]
	rebase = true
[apply]
	;whitespace = fix
[rebase]
	autoSquash = true
	autoStash = true
	preserve = true
	stat = true
[commit]
	gpgsign = true
[format]
	signoff = true
[alias]
	af = autofixup
	graph = log --all --graph --decorate --oneline
	gr = log --all --graph --decorate --oneline
	aa = add -a
	ap = add -p
	br = branch
	chp = cherry-pick
	ci = commit -vv
	co = checkout
	pf = push --force-with-lease
	rb = rebase
	rbi = rebase -i
	rbc = rebase --continue
	di = diff --minimal
	ds = diff --minimal --staged
	wd = diff --word-diff=color --ignore-all-space
	wds = diff --staged --word-diff --ignore-all-space
	cd = diff --word-diff=color --word-diff-regex=. --ignore-all-space
	cds = diff --staged --word-diff=color --word-diff-regex=. --ignore-all-space
	ws = show --minimal --word-diff=color --ignore-all-space
	cs = show --minimal --word-diff=color --word-diff-regex=. --ignore-all-space
	difftex = difftool -y -t latex
	st = status
	lg = log --oneline --reverse
	dls = diff-tree --no-commit-id --name-status -r
	getroot = !pwd
	# http://stackoverflow.com/a/4991675/313192
	oldest-ancestor = !zsh -c 'diff --old-line-format='' --new-line-format='' <(git rev-list --first-parent "${1:-master}") <(git rev-list --first-parent "${2:-HEAD}") | head -1' -
	branchlog = !sh -c 'git log $(git oldest-ancestor)..'
	branchdiff = !sh -c 'git diff $(git oldest-ancestor)..'
	; rebase2fork = !zsh -c 'git rebase -i $(git merge-base --fork-point "${0:-master}")'
	ci-status = !sh -c 'oldest=$(git oldest-ancestor) head=$(git rev-parse HEAD) && git rev-list --oneline $([[ $oldest == $head ]] && echo $head^.. || echo $oldest..) | while read sha x\n do echo $sha $(hub ci-status -v $sha)\n done'
[log]
	abbrevCommit = true
	decorate = true
	follow = true
[status]
	short = true
	submoduleSummary = true
[rerere]
	enabled = true
[diff]
	indentHeuristic = true
	ignoreSubmodules = dirty
[difftool.latex]
	cmd = latexdiff "$LOCAL" "$REMOTE"
[fetch]
	prune = true
	fsckobjects = true
[stash]
	showPatch = true
[transfer]
	fsckObjects = true
[receive]
	fsckObjects = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[pager]
	diff = diff-so-fancy | less --tabs=4 -RFX
	show = diff-so-fancy | less --tabs=4 -RFX
[color "diff"]
	meta = yellow
	commit = yellow
	frag = magenta
	old = red
	new = green
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = red
	oldHighlight = "red 52"
	newNormal = "green"
	newHighlight = "green 22"
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = blue
[color "status"]
	added = green
	changed = yellow
	untracked = cyan
