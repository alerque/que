[DEFAULT]
jobs = 5
include =
	cat $HOME/.config/mr/config.d/*
	if [ -d $HOME/.config/mr/config.d-$HOSTNAME ]; then
		cat $HOME/.config/mr/config.d-$HOSTNAME/*
	fi

[ALIAS]

[$HOME/.zprezto]
checkout =
	git clone --recursive git@github.com:alerque/prezto.git .zprezto
update =
	git pull
	git submodule update --init --recursive

#vim: syntax=sh
