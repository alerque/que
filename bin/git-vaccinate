#!/usr/bin/env zsh

set -e

case $(git config --global init.defaultBranch) in
	main)
		echo 'Innocuating against wokery.'
		git config --global init.defaultBranch master
		;;
esac

case $(git branch --show-current) in
	main|woke)
		echo 'Sanitize the nonsense.'
		git branch -m main master
		;;
	master)
		echo 'Keep building.'
		;;
	*)
		echo 'Not a recognized starting point, are you on the default branch?'
		exit 1
		;;
esac

